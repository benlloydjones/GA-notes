<form method="POST" action="/restaurants/<%= restaurant.id %>">
  <input type="hidden" name="_method" value="PUT">
  <div>
    <label>Name</label>
    <input type="text" name="name" value="<%= restaurant.name %>">
  </div>
  <div>
    <label>Address</label>
    <input type="text" name="address" value="<%= restaurant.address %>">
  </div>
  <div>
    <label>Cuisine</label>
    <input type="text" name="cuisine" value="<%= restaurant.cuisine %>">
  </div>
  <button>Update</button>
</form>
